<config>
   <sections>
        <orderupdatepermission translate="label" module="silk_orderupdatepermission">
            <label>Order Update Permissions</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>302</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <orderpermission translate="label">
                    <label>Order Update Permissions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                         <orderstatus translate="label">
                            <label>Available Order Status for Updating</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>silk_orderstatusemail_adminhtml/system_config_source_order_status</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </orderstatus>
                        
                         <acpstatus translate="label">
                            <label>Available Order Status for Accept Payment</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>silk_orderstatusemail_adminhtml/system_config_source_order_status</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </acpstatus>
                        
                    </fields>
                </orderpermission>
            </groups>
        </orderupdatepermission>
    </sections>
</config>
