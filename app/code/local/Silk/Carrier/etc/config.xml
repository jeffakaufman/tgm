<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Silk_Carrier>
            <version>0.0.1</version>
        </Silk_Carrier>
    </modules>
    <global>
        <models>
            <silk_carrier>
                <class>Silk_Carrier_Model</class>
            </silk_carrier>
        </models>
        <blocks>
            <silk_carrier>
                <class>Silk_Carrier_Block</class>
            </silk_carrier>
            <checkout>
                <rewrite>
                    <cart_shipping>Silk_Carrier_Block_Cart_Shipping</cart_shipping>
                </rewrite>
                <rewrite>
                    <onepage_shipping_method_available>Silk_Carrier_Block_Onepage_Shipping_Method_Available</onepage_shipping_method_available>
                </rewrite>
            </checkout>
       </blocks>
        <sales>
                <quote>
                        <item>
                                <product_attributes>
                                        <has_installation_fee />
                                </product_attributes>
                        </item>
                </quote>
        </sales>
        <resources>
                <carrier_setup>
                        <setup>
                                <module>Silk_Carrier</module>
                                <class>Silk_Carrier_Model_Resource_Setup</class>
                        </setup>
                </carrier_setup>
                <connection>
                        <use>core_setup</use>
                </connection>
                <carrier_write>
                        <connection>
                            <use>core_write</use>
                        </connection>
                </carrier_write>
                <carrier_read>
                        <connection>
                            <use>core_read</use>
                        </connection>
               </carrier_read>
        </resources>
    </global>
    <!-- Default configuration -->
    <default>
        <carriers>
            <silk_carrier>
                <active>1</active>
                <model>silk_carrier/carrier</model>
                <title>Silk Carrier</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </silk_carrier>
        </carriers>
    </default>
</config>