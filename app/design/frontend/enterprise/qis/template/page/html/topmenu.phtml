<script type="text/javascript">
jQuery.noConflict();
(function( $ ) {
	$(function() {
		$(".header-inner .navi ul.level0 li").each(function(){
			var that = $(this);
			var timoutid = 0;
			if(that.attr('active-category')==="currentCategory"){
				that.find('a').css("background","url("+that.attr("hover-img")+") no-repeat 50% 70%");
				that.find('a').css("color","#fdc0ae");
			}else{
				that.find('a').css("background","url("+that.attr("general-img")+") no-repeat 50% 70%");
				that.find('a').css("color","#fff");
			}
			that.mouseover(function(){
				timoutid  = setTimeout(function(){
					that.find('a').css("background","url("+that.attr("hover-img")+") no-repeat 50% 70%");
					that.find('a').css("color","#fdc0ae")
				},150);
			}).mouseout(function(){
				clearTimeout(timoutid);
				if((that.attr('active-category')!=="currentCategory")){
					that.find('a').css("background","url("+that.attr("general-img")+") no-repeat 50% 70%");
					that.find('a').css("color","#fff");
				}
			});
		});
		$(".header-inner .mnavi ul.level0 li").each(function(){
			var that = $(this);
			var timoutid = 0;
			if(that.attr('active-category')==="currentCategory"){
				that.find('a').css("color","#fdc0ae");
			}else{
				that.find('a').css("color","#fff");
			}
			that.mouseover(function(){
				timoutid  = setTimeout(function(){
					that.find('a').css("color","#fdc0ae")
				},150);
			}).mouseout(function(){
				clearTimeout(timoutid);
				if((that.attr('active-category')!=="currentCategory")){
					that.find('a').css("color","#fff");
				}
			});
		});		
		
    });
})( jQuery );
</script>
