?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <div class="pager clearfix">
    <?php echo $this->getChildHtml('catalog_list_filter');?>
    <?php echo $this->getPagerHtml() ?>	
        <p class="amount">
        <?php if($this->getLastPageNum()>1): ?>
            <?php echo $this->__('%s Results',$this->getTotalNum()) ?>
        <?php else: ?>
            <?php echo $this->__('%s Results',$this->getTotalNum()) ?>
        <?php endif; ?>
    </p>

    </div>    
</div>
<?php endif ?>

<?php if($this->getCollection()->getSize()<=Mage::getStoreConfig('catalog/frontend/grid_per_page')): ?>
<script type="text/javascript">
(jQuery().ready(function($){
    $(".pager .amount").css('border-right','none');
   }(jQuery)));
</script>
<?php endif;?>
