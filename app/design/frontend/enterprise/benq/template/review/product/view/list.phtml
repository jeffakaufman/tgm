<?php $_items = $this->getReviewsCollection()->getItems();?>
<a name="review-list" id="review-list" ></a>
<div class="box-collateral box-reviews" id="customer-reviews">
<?php if (count($_items)):?>
    <div class="box-title">
        <h2><?php echo $this->__('Customer Reviews') ?></h2>
    </div>
    <?php echo $this->getChildHtml('toolbar') ?>
    <blockquote id="product-reviews-list">
        <ol>
            <?php foreach ($_items as $_review):?>
            <li>
                <div class="title clearfix"><strong><?php echo $this->htmlEscape($_review->getTitle()) ?></strong><span class="athor"><cite><?php echo $this->__('%s', $this->htmlEscape($_review->getNickname())) ?></cite><?php echo $this->__('posted on %s', $this->formatDate($_review->getCreatedAt()), 'long') ?></span></div> 
                <div class="review">
                    <?php foreach ($_review->getRatingVotes() as $_vote): ?>
                    <div class="ratecontent clearfix">
                        <p>Rating:</p>
                        <em><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></em>
                        <div class="rating-box">
                            <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                        </div>
                    </div>
                    <?php endforeach; ?>
                    <p class="comment"><?php echo nl2br($this->htmlEscape($_review->getDetail())) ?></p>
                </div>
            </li>
             <?php endforeach; ?>
        </ol>    
    </blockquote>
    <?php echo $this->getChildHtml('toolbar') ?>
<?php endif;?>
<?php echo $this->getChildHtml('review_form') ?>
</div>
