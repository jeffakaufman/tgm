<?php if (($_products = $this->getProductCollection()) && $_products->getSize()): ?>

    <?php //$_columnCount = $this->getColumnCount();
    $_columnCount = 2;
    $max = 2;
     ?>
    <?php $i=0; foreach ($_products->getItems() as $_product): ?>
        <?php if ($i++%$_columnCount==0): ?>
       <ul class="featured clearfix">
        <?php endif ?>
            <li class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
                <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>" class="product-image"><img  src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(282) ?>" width="282" height="282" alt="<?php echo $this->htmlEscape($_product->getName()) ?>" /></a>
            </li>
        <?php if ($i%$_columnCount==0 || $i==count($_products)): ?>
        </ul>
        <?php endif ?>
        <?php if($i == $max) break;?>
    <?php endforeach; ?>

<?php endif; ?>
