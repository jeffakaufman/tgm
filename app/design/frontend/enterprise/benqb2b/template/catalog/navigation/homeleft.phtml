/**
 * Category left navigation
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<?php $_categories = $this->getCurrentChildCategories() ?>
<div class="categories_list">
    <h2><?php echo $this->__('BenQ Store') ?></h2>
    <ul>
        <?php foreach ($_categories as $_category): ?>            
        <?php if($_category->getIsActive()): ?>
        <li class="type">
            <h4><?php echo $this->htmlEscape($_category->getName()) ?></h4>
            <?php $_cg = Mage::getModel('catalog/category')->load($_category->entity_id) ;
                       $_childs = $_cg->getChildrenCategories(); ?>
            <ul>
                <?php foreach ($_childs as $_child): ?>
                <li><a href="<?php echo $this->getCategoryUrl($_child) ?>" title="<?php echo $this->htmlEscape($_child->getName()) ?>">
                <?php echo $this->htmlEscape($_child->getName()) ?></a>
                </li>
                <?php endforeach ?>
            </ul>
        </li>
        <?php endif; ?>
        <?php endforeach ?>
    </ul>
    
</div>