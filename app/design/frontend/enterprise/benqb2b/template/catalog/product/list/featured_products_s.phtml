        <p class="description"><?php echo Mage::helper('core/string')->truncate($this->stripTags($product->getShortDescription(), null, true), 100); ?></p>
        <p class="price"><?php echo Mage::getModel('directory/currency')->format($product->getFinalPrice());?></p>
        </li>
 <?php $i = $i + 1;?>
<?php endforeach;?>
    </ul>
</div>
