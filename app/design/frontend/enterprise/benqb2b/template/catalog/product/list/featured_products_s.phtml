	$featuredProducts = $this->getSideFeaturedCollection();
    $i = 0;
?>


<div class="benq_featured_products">
    <h3>Featured Products</h3>
    <ul>
        <?php foreach ($featuredProducts as $_product):?>
        <?php $product = $_product->load($_product->getId());?>
